@model TravelTripProject.Models.Class.AdresBlog
@{
    ViewBag.Title = "UpdateContact";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>İletişim Bilgisi Güncelleme Sayfası</h2>

<form method="post">
    @Html.Label("Id")
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.Label("Açıklama")
    @Html.TextAreaFor(x => x.Aciklama, 10, 1, new { @class = "form-control" })
    <br />
    @Html.Label("Başlık")
    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
    <br />
    @Html.Label("Açık Adres")
    @Html.TextBoxFor(x => x.AdresAcik, new { @class = "form-control" })
    <br />
    @Html.Label("Telefon")
    @Html.TextBoxFor(x => x.Telefon, new { @class = "form-control" })
    <br />
    @Html.Label("Mail")
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <br />
    @Html.Label("Konum")
    @Html.TextBoxFor(x => x.Konum, new { @class = "form-control" })
    <br />
    <button class="btn btn-outline-primary">Hakkımızda Güncelle</button>
</form>
